</div>
<script>
    $("#btn_binhluan").click(function () {
        
        var binhluan = $("#txt_noidung").val();
        if (binhluan == "") {
            $("#tb_binhluan").text("Cần nhập từ khóa bình luận !!!");
            return false;
        }
        return true;
    });
</script>